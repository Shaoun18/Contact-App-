<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="7dp"
    android:padding="5dp"
    android:elevation="2dp"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rowContactName"
            tools:text="Some Name"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rowInfoBtn"
            app:tint="@color/purple_200"
            android:src="@drawable/ic_baseline_info_24"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rowCallBtn"
            app:tint="@color/purple_500"
            android:src="@drawable/ic_baseline_call_24"
            android:layout_below="@id/rowContactName"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rowSmsBtn"
            app:tint="@color/purple_500"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_baseline_sms_24"
            android:layout_toEndOf="@id/rowCallBtn"
            android:layout_below="@id/rowContactName"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rowEmailBtn"
            app:tint="@color/purple_500"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_baseline_email_24"
            android:layout_toEndOf="@id/rowSmsBtn"
            android:layout_below="@id/rowContactName"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rowMapBtn"
            app:tint="@color/purple_500"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_baseline_map_24"
            android:layout_toEndOf="@id/rowEmailBtn"
            android:layout_below="@id/rowContactName"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>